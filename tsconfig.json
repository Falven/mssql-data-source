{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {},
    "resolveJsonModule": true,
    "rootDir": ".",
    "declaration": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
