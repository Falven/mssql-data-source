{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "paths": {},
    "resolveJsonModule": true,
    "rootDir": ".",
    "declaration": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "target": "ESNext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
